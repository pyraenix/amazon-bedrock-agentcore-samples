# Environment template for llamaindex-agentcore-browser-integration
# Copy this file to .env and customize for your environment

# Environment Configuration
ENVIRONMENT=development
VERSION=latest
BUILD_TARGET=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here

# AgentCore Configuration
AGENTCORE_BROWSER_ENDPOINT=https://agentcore-browser-dev.us-east-1.amazonaws.com

# Application Configuration
APP_PORT=8000
LOG_LEVEL=INFO

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Nginx Configuration (for production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Security Configuration
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Development Configuration
DEBUG=true
RELOAD=true

# Testing Configuration
TEST_ENVIRONMENT=true
MOCK_AGENTCORE=false

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./data/llamaindex_agentcore.db

# Logging Configuration
LOG_FILE=/app/logs/llamaindex_agentcore.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# CAPTCHA Configuration
CAPTCHA_ENABLED=true
CAPTCHA_CONFIDENCE_THRESHOLD=0.8
CAPTCHA_MAX_ATTEMPTS=3

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080
BROWSER_TIMEOUT=30

# Monitoring and Alerting
MONITORING_ENABLED=true
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=300
ALERT_EMAIL=your-email@example.com

# Privacy and Compliance
PII_DETECTION_ENABLED=true
PII_SCRUBBING_MODE=mask
DATA_RETENTION_DAYS=30
COMPLIANCE_REPORTING=true

# Development Tools
JUPYTER_ENABLED=false
JUPYTER_PORT=8888
PROFILING_ENABLED=false

# Docker Configuration
COMPOSE_PROJECT_NAME=llamaindex-agentcore
COMPOSE_FILE=docker-compose.yml